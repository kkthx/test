#######################################################
##########        BEGIN User part            ##########
##########       You can change it           ##########
#######################################################
CFLAGS = -Wall -g -fPIC
LDFLAGS = -shared
SOURCES = ./src/main.c ./src/person.c
NAME = prog
LIB = libperson.so
#######################################################
##########        END User part              ##########
#######################################################

#######################################################
##########      BEGIN Automation part        ##########
##########     You shouldn't change it       ##########
#######################################################
OBJECTS = $(SOURCES:.c=.o)

all: $(NAME)

$(NAME): $(OBJECTS)
	$(CC) $(OBJECTS) -o $(NAME)
	$(CC) $(OBJECTS) $(LDFLAGS) -o $(LIB)

$(NAME2): $

%.o: %.c
	$(CC) -c $(CFLAGS) $< -o $@

clean:
	rm -f $(OBJECTS)
	rm -f $(NAME)
	rm -f $(LIB)
	rm -f *vgcore*
	rm -f core
#######################################################
##########       END Automation part         ##########
#######################################################

